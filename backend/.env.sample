# DSP Films - Backend Environment Variables
# Copy this file to .env and fill in the values

# MongoDB Connection (Required)
MONGO_URL=mongodb://localhost:27017
# Or MongoDB Atlas:
# MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/

# Database Name (Required)
DB_NAME=test_database

# JWT Secret for admin authentication
JWT_SECRET=your-secure-jwt-secret-key-here

# Frontend URL for CORS (Required)
FRONTEND_URL=https://dspfilms.com

CORS_ORIGINS=*

# AI Provider API Keys
GROQ_API_KEY=your-groq-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# Emergency Reset Key (change in production)
EMERGENCY_RESET_KEY=your-emergency-reset-key-here

# File Upload Storage
STORAGE_PATH=/app/backend/uploads

# Email Configuration (Optional - for password reset)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# Environment
NODE_ENV=production
